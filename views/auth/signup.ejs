<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">

</head>

<body>
   <%- include('../includes/navigation.ejs') %>


    <main>
        <% if(errorMessage){ %>
            <div class="user-message user-message--error"> <%= errorMessage %> </div>
        <% } %>
        <form class="product-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="email">Email</label>
                <input 
                class="<%= validationErrors.find(e => e.path==='email') ? 'invalid' : '' %>"
                 type="email" 
                 name="email" 
                 id="email"
                  value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Pasword</label>
                <input 
                class="<%= validationErrors.find(e => e.path==='password') ? 'invalid' : '' %>"
                type="text" 
                name="password" 
                id="password" value="<%= oldInput.password %>" >
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Pasword</label>
                <input 
                class="<%= validationErrors.find(e => e.path==='confirmPassword') ? 'invalid' : '' %>"
                type="text" 
                name="confirmPassword" 
                id="confirmPassword"  value="<%= oldInput.confirmPassword %>" >
            </div>
            
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>